@rendermode InteractiveServer

<button class="nav-link" @onclick="ToggleAboutModal">About</button>

@if (isAboutModalVisible)
{
    <div class="modal-backdrop" @onclick="ToggleAboutModal"></div>
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">About This App</h5>
                <button type="button" class="close" @onclick="ToggleAboutModal">&times;</button>
            </div>
            <div class="modal-body">
                <p><strong>Movie Browser v1.0</strong></p>
                <p>
                    This application was created as a learning project to explore building modern, interactive web applications using the Blazor framework with C# and .NET.
                </p>
                <p>
                    All movie data is provided by the free and excellent <a href="https://www.themoviedb.org/" target="_blank">The Movie Database (TMDb)</a> API.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="ToggleAboutModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private bool isAboutModalVisible = false;

    private void ToggleAboutModal()
    {
        isAboutModalVisible = !isAboutModalVisible;
    }
}

<style>
     .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1040 !important;
    }

    .modal {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90%;
        max-width: 600px;
        z-index: 1050 !important; 
        outline: 0;
        display: block !important;
    }

    .modal-content {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
        background-color: white;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, 0.2);
        border-radius: 0.3rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.5);
    }

    .modal-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        padding: 1rem 1rem;
        border-bottom: 1px solid #dee2e6;
    }

    .modal-title {
        margin-bottom: 0;
        line-height: 1.5;
    }

    .close {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
        color: #000;
        text-shadow: 0 1px 0 #fff;
        opacity: .5;
        background-color: transparent;
        border: 0;
        cursor: pointer;
    }

    .modal-body {
        position: relative;
        flex: 1 1 auto;
        padding: 1rem;
    }

    .modal-footer {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding: 1rem;
        border-top: 1px solid #dee2e6;
    }

    .btn {
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>