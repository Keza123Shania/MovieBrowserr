@page "/movie/{MovieId:int}"
@using MovieBrowserr.Models
@using MovieBrowserr.Data
@inject HttpClient Http
@inject ApplicationDbContext DbContext
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

@if (movie == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="detail-container">
        <img class="detail-poster" src="@($"https://image.tmdb.org/t/p/w500/{movie.PosterPath}")" alt="@movie.Title Poster" />
        <div class="detail-info">
            <h1>@movie.Title <span class="release-year">(@movie.ReleaseDate.Substring(0, 4))</span></h1>

            <div class="meta-info">
                <span>@movie.Runtime min</span>
                <span class="separator">|</span>
                @foreach (var genre in movie.Genres)
                {
                    <span class="genre-badge">@genre.Name</span>
                }
            </div>

            <AuthorizeView>
                <Authorized>
                    <div class="action-buttons">
                        <button class="action-btn @(isOnWatchlist ? "active" : "")" @onclick="ToggleWatchlist">
                            @(isOnWatchlist ? "✓ On Watchlist" : "+ Add to Watchlist")
                        </button>
                        <button class="action-btn @(isFavorite ? "active" : "")" @onclick="ToggleFavorite">
                            @(isFavorite ? "♥ Favorited" : "♡ Add to Favorites")
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>

            <div class="rating">
                <span class="rating-value">@movie.VoteAverage.ToString("0.0")</span> / 10
            </div>

            <h3>Overview</h3>
            <p class="overview">@movie.Overview</p>
        </div>
    </div>
}

@if (similarMovies.Any())
{
    <div class="similar-movies-section">
        <h3>Similar Movies</h3>
        <div class="similar-grid">
            @foreach (var similarMovie in similarMovies)
            {
                <a href="@($"movie/{similarMovie.Id}")" class="movie-link">
                    <div class="movie-card">
                        @if (!string.IsNullOrEmpty(similarMovie.PosterPath))
                        {
                            <img src="@($"https://image.tmdb.org/t/p/w500/{similarMovie.PosterPath}")" alt="@similarMovie.Title" />
                        }
                        else
                        {
                            <div class="no-poster">@similarMovie.Title</div>
                        }
                    </div>
                </a>
            }
        </div>
    </div>
}

